# {{ ansible_managed }}
production:
  adapter: postgresql
  encoding: unicode
  database: {{ gitlab_db_name }}
  pool: {{ gitlab_db_pool }}
  username: {{ gitlab_db_user }}
  {% if gitlab_postgresql_host is defined %}
  host: '{{ gitlab_postgresql_host }}'
  {% else %}
  host: 'localhost'
  socket: {{ postgres_unix_socket_directories }}
  {% endif %}
